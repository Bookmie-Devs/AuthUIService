<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add a Form</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.0.24/dist/tailwind.min.css" rel="stylesheet">
    <style>
        #editor {
            height: 400px;
            width: 100%;
            border: 1px solid #888;
            /* Border color */
            border-radius: 15px;
            /* Rounded corners */
            overflow: hidden;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.8);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            border-radius: 8px;
            color: #000;
        }

        #close-preview {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        #close-preview:hover,
        #close-preview:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>

<body class="bg-slate-800 text-white">
    <nav class="bg-slate-800 p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-white text-2xl font-bold">
                {{!-- <img class="w-14 h-9" src="/images/logo.webp" /> --}}
                Add a Form to Auth Ui
            </a>
            <div class="hidden md:flex space-x-4  items-center">
                <a href="/accounts/signup/"
                    class="text-white text-lg bg-blue-700 rounded-md px-3 py-2 nav-item hover:bg-blue-500">Register</a>
                <a href="/accounts/login/"
                    class="text-white text-lg outline rounded-md text-center px-3 py-2 outline-1  nav-item hover:outline-2">Login</a>
            </div>
            <div class="md:hidden flex items-center">
                <button id="menu-button" class="text-gray-700 focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16m-7 6h7"></path>
                    </svg>
                </button>
            </div>
        </div>
        <div id="menu" class="md:hidden mt-2 hidden">
            <a href="/accounts/signup/" class="block text-white px-4 py-2 hover:bg-gray-200">Register</a>
            <a href="/accounts/login/" class="block text-white px-4 py-2 hover:bg-gray-200">Login</a>
        </div>
    </nav>
    <div class="min-h-full px-6">
        <div class="flex justify-between px-3 mt-3">
            <label class="block text-gray-900 text-lg font-bold mb-2">HTML Code</label>
            <button type="button" id="switch" class="text-slate-800 outline outline-2 px-2 rounded-md text-lg">Upload
                html
                file</button>
        </div>
        <div id="main-div">
            <form id="formCreator" class="bg-slate-200 rounded-lg pt-3 pb-8 mb-4">
                <div class="mb-4">
                    <div id="editor"></div>
                </div>
                <button type="button" id="previewButton"
                    class=" outline outline-slate-800 hover:outline-slate-600 text-slate-800 w-full mb-2 font-bold py-2 px-4 rounded-md focus:outline-none focus:shadow-outline">Preview</button>
                <div class="mb-4">
                    <label class="block text-slate-800 text-sm font-bold mb-2" for="title">Form Title</label>
                    <input id="title" name="title" type="text" required
                        class="shadow appearance-none border rounded-md w-full py-2 px-3 text-gray-900 leading-tight focus:outline-none focus:shadow-outline" />
                </div>
                <div class="mb-4">
                    <label class="block text-slate-800 text-sm font-bold mb-2" for="description">Description</label>
                    <textarea name="description" id="description" required
                        class="shadow appearance-none border rounded-md w-full py-2 px-3 text-gray-900 leading-tight focus:outline-none focus:shadow-outline"></textarea>
                </div>
                <div class="mb-4">
                    <label class="block text-salte-800 text-sm font-bold mb-2" for="previewImage">Preview Image</label>
                    <input name="preview_image" id="previewImage" type="file" required
                        class="shadow appearance-none border rounded-md w-full py-2 px-3 text-gray-900 leading-tight focus:outline-none focus:shadow-outline" />
                </div>

                <div class="flex items-center justify-between">
                    <button type="submit"
                        class="bg-blue-600 w-full hover:bg-gray-500 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline">Submit
                        Form</button>
                </div>
            </form>
        </div>



        <div id="main-div-2" class="hidden">
            <form id="formCreator" class="bg-slate-200 rounded-lg pt-3 pb-8 mb-4">
                <div class="mb-4">
                    <label class="block text-slate-800 text-sm font-bold mb-2" for="title">Form Title</label>
                    <input name="title" id="title" type="text" required
                        class="shadow appearance-none border rounded-md w-full py-2 px-3 text-gray-900 leading-tight focus:outline-none focus:shadow-outline" />
                </div>
                <div class="mb-4">
                    <label class="block text-slate-800 text-sm font-bold mb-2" for="description">Description</label>
                    <textarea title="description" id="description" required
                        class="shadow appearance-none border rounded-md w-full py-2 px-3 text-gray-900 leading-tight focus:outline-none focus:shadow-outline"></textarea>
                </div>
                <div class="mb-4">
                    <label class="block text-salte-800 text-sm font-bold mb-2" for="previewImage">Html File</label>
                    <input name="file_content" id="previewImage" type="file" required
                        class="shadow appearance-none border rounded-md w-full py-2 px-3 text-gray-900 leading-tight focus:outline-none focus:shadow-outline" />
                </div>
                <div class="mb-4">
                    <label class="block text-salte-800 text-sm font-bold mb-2" for="previewImage">Preview Image</label>
                    <input name="preview_image" id="previewImage" type="file" required
                        class="shadow appearance-none border rounded-md w-full py-2 px-3 text-gray-900 leading-tight focus:outline-none focus:shadow-outline" />
                </div>

                <div class="flex items-center justify-between">
                    <button type="submit"
                        class="bg-blue-600 w-full hover:bg-gray-500 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline">Submit
                        Form</button>
                </div>
            </form>
        </div>


        <!-- Modal for Preview -->
        <div id="myModal" class="modal">
            <div class="modal-content">
                <span id="close-preview">&times;</span>
                <h2>Form Preview</h2>
                <div id="previewContainer">
                    <p>Loading preview...</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/monaco-editor/min/vs/loader.js"></script>
    <script>
        require.config({ paths: { 'vs': 'https://unpkg.com/monaco-editor/min/vs' } });
        require(['vs/editor/editor.main'], function () {
            monaco.editor.setTheme('vs-dark');
            const editor = monaco.editor.create(document.getElementById('editor'), {
                value: '<h1>Welcome to AuthUi!</h1>',
                language: 'html'
            });

            const modal = document.getElementById("myModal");
            const switchBtn = document.getElementById("switch");
            const closeModal = document.getElementById("close-preview");
            const mainDiv = document.getElementById("main-div");
            const mainDiv2 = document.getElementById("main-div-2")

            document.getElementById('previewButton').onclick = function () {
                const code = editor.getValue();
                const title = document.getElementById('title').value;
                const description = document.getElementById('description').value;
                const previewImage = document.getElementById('previewImage').value;

                const previewContent = code;

                document.getElementById('previewContainer').innerHTML = previewContent;
                modal.style.display = "block";
            };

            closeModal.onclick = function () {
                modal.style.display = "none";
            };

            switchBtn.onclick = function () {
                mainDiv.classList.toggle("hidden")
                mainDiv2.classList.toggle("hidden")
                switchBtn.innerText = "Code Form"
            };

            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            };

            document.addEventListener('submit', function (event) {
                async function sendForm(form) {
                    const result = await fetch("/forms/add-form/", {
                        method: "POST",
                        body: form
                    })
                }

                event.preventDefault();
                const form = new FormData(event.target)
                sendForm(form)

                console.log(form)
                alert('Form submitted successfully!');
            });
        });
    </script>
</body>

</html>